<button id="clear" onclick="clearItem()">Clear</button>
<script>
let input = document.getElementById("name");
let sayHiButton = document.getElementById("sayHiBtn")
let sayHi = function() {
  if (input.value !== "") {
    alert(`Hi ${input.value}`);
  }
  input.value = "";
};
sayHiButton.addEventListener("click", sayHi)
</script>
